<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.agri.mapper.SysRolePermMapper">

    <select id="getPermsOfRoles" resultType="java.util.Map">
        select * from
        sys_role_perm a LEFT JOIN sys_role b on a.role_id = b.id
        LEFT JOIN sys_perm c on a.perm_id = c.id
        where b.id =
        <foreach collection="ids" item="val" open="(" close=")">
            #{val}
        </foreach>
    </select>
</mapper>
